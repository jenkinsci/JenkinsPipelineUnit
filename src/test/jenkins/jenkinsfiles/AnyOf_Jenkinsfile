pipeline {
    agent any
    stages {
        stage('Example Build') {
            steps {
                echo 'Hello World'
            }
        }
        stage('Example anyOf expression') {
            when {
                anyOf {
                    expression {
                        return env.SHOULD_EXECUTE == 'true'
                    }
                    expression {
                        return 1 == 2
                    }
                }
            }
            steps {
                echo 'Executing anyOf with expression'
            }
        }
        stage('Example anyOf branches') {
            when {
                anyOf {
                    branch 'production'
                    branch 'release'
                    branch 'main-**'
                }
            }
            steps {
                echo 'Executing anyOf with branch'
            }
        }
    }
}
